{
  "keybindings": {
    "Status" : {
      "<s>": {"SwitchScene":"Status"},
      "<S>": {"SwitchScene":"Status"},
      "<o>": {"SwitchScene":"Options"},
      "<O>": {"SwitchScene":"Options"},
      "<h>": {"SwitchScene":"Help"},
      "<H>": {"SwitchScene":"Help"},

      "<Ctrl-s>": {"StatusActions":"StartStopNode"},
      "<Ctrl-S>": {"StatusActions":"StartStopNode"},
